<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/admin/main.css">
</head>
<body>
    <!-- namestili smo da nam ovde putanja ide od views foldera -->
    <%- include('/admin/partials/navbar.ejs') %>  
    <div class="container-fluid mt-5">
        <div class="row">
            <%- include('/admin/partials/sidebar') %>
            <div class="col-10 d-flex align-items-center mb-3">
                <h1 style="display: none;">Dobrodosao <%= user.username %> ðŸ˜Ž na:</h1>
                <h1 class="ms-4 fw-bold">New Task</h1>
                <!-- ms-auto -->
                <a href="/admin/dashboard" class="btn btn-outline-primary ms-auto">Cancel</a>
            </div>
            <hr>
            <div class="row">
                <div class="col-8 offset-2">
                    <form action="/admin/task" method="post">
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea type="text" name="description" id="description" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="assignedTo">For</label>
                            <!-- class="form-select" za strelicu na dole -->
                            <select name="assignedTo" id="assignedTo" class="form-select">
                                    <!-- default option polje -->
                                    <option disabled hidden selected>Select user</option>
                                <% users.forEach(user => { %>
                                    <option value="<%= user._id %>"><%= user.username %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="public">Public</label>
                            <!-- kada je selektovan checkbox njegov value je "on"(a kad nije onda nema nista) -->
                            <input type="checkbox" name="public" id="public" class="form-check-input">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary w-25">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/jquery.js"></script>
    <script>
        $("h1").slideDown(1000);
    </script>
</body>
</html>